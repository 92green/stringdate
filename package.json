{
  "private": true,
  "scripts": {
    "prep": "yarn && yarn lerna bootstrap",
    "build": "yarn lerna run build",
    "bump": "yarn lerna publish -m \"build: add tags\"",
    "preversion": "yarn build",
    "reinstall": "rm -rf node_modules && yarn prep",
